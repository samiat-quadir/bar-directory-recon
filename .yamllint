---
# .yamllint
extends: default
rules:
  document-start: disable
  line-length:
    max: 150
  comments:
    level: warning
  empty-lines:
    max: 1
    level: warning
  braces:
    level: warning
  truthy:
    level: warning

ignore: |
  mega_memory.yaml
  Ai Integration Setup.yaml
  Ai Project Setup & Automation Roadmap.txt
  planning/
  reference/
  .venv/**
  .venv311/**
  universal_recon/bar-recon-clean/**
  **/docker-compose*.yml
  **/validation_matrix.yaml
  **/prefect.yaml
  **/logging.yaml
