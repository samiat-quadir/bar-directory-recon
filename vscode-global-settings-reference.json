// Global VS Code settings to prevent approval prompts
// Add these to your User Settings JSON (Ctrl+Shift+P â†’ "Preferences: Open User Settings (JSON)")

{
  // Terminal execution settings (add to existing settings.json)
  "terminal.integrated.confirmOnExit": "never",
  "terminal.integrated.confirmOnKill": "never",
  "terminal.integrated.allowChords": false,
  
  // PowerShell specific settings
  "powershell.scriptAnalysis.enable": false,
  "powershell.integratedConsole.suppressStartupBanner": true,
  "powershell.developer.waitForSessionFileWatcher": false,
  
  // Security settings for automation
  "security.workspace.trust.enabled": false,
  "security.workspace.trust.banner": "never",
  "security.workspace.trust.untrustedFiles": "open",
  
  // GitHub Copilot settings
  "github.copilot.advanced": {
    "debug.overrideEngine": "copilot-chat",
    "debug.testOverrideProxyUrl": "",
    "debug.overrideProxyUrl": ""
  },
  
  // Disable other confirmation dialogs
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "git.confirmSync": false,
  "diffEditor.ignoreTrimWhitespace": false,
  
  // Auto-save for better workflow
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000
}