{
  // Pin the repo to its own venv on Windows hosts
  "python.defaultInterpreterPath": "${workspaceFolder}\\.venv\\Scripts\\python.exe",

  // Testing
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": ["-q", "-p", "no:cacheprovider"],

  // Source layout
  "python.analysis.extraPaths": [
    "${workspaceFolder}\\src",
    "${workspaceFolder}\\universal_recon"
  ],

  // Formatting & linting (deterministic on save)
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "black-formatter.args": ["--line-length", "88"],
  "ruff.enable": true,
  "ruff.organizeImports": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll.ruff": "explicit"
  },

  // Reduce noise in search/explorer for this repo
  "files.exclude": {
    "**/.venv": true,
    "**/.pytest_cache": true,
    "**/__pycache__": true
  },
  "search.exclude": {
    "**/.venv": true,
    "**/.pytest_cache": true,
    "**/__pycache__": true
  },

  // GitHub Copilot Chat auto-approval settings
  "github.copilot.chat.terminalExecution": "always",
  "github.copilot.chat.runCommandAutoApproval": "on",
  "github.copilot.chat.experimentalTerminalAutoApproval": true,

  // Security and trust settings for this workspace
  "security.workspace.trust.enabled": true,
  "security.workspace.trust.banner": "never",
  "security.workspace.trust.emptyWindow": false,

  // Terminal settings for auto-execution
  "terminal.integrated.confirmOnExit": "never",
  "terminal.integrated.showExitAlert": false,
  "chat.agent.maxRequests": 100
}
