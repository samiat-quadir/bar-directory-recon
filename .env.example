# Gmail Configuration
GMAIL_USER=your.email@gmail.com
GMAIL_TOKEN_PATH=/path/to/token.pickle
TO_EMAILS=recipient1@example.com,recipient2@example.com

# Motion API Configuration
MOTION_API_KEY=your_motion_api_key
MOTION_WORKSPACE_ID=your_workspace_id
MOTION_PROJECT_ID=your_project_id

# Git Configuration
LOCAL_GIT_REPO=/path/to/local/repo
GIT_EXECUTABLE_PATH=/path/to/git.exe
GIT_LOG_PATH=logs/git_commit_notify.log

# Chrome Configuration
CHROMEDRIVER_PATH=/path/to/chromedriver.exe

# Optional Features
GOOGLE_DRIVE_UPLOAD=false  # Set to true to enable Google Drive uploads
SENTRY_DSN=your_sentry_dsn  # Optional: For error tracking
HEALTHCHECK_URL=your_healthcheck_url  # Optional: For uptime monitoring

# Development Settings
DEBUG=false
VERBOSE_LOGGING=false

# Path to service-account JSON file (keep in OneDrive, not repo)
# GOOGLE_SA_JSON should point to a file in OneDrive (outside repo)
GOOGLE_SA_JSON=C:\Users\YOU\OneDrive\secrets\service_account.json

