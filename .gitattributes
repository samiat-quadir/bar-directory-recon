# Normalize text on checkout; do NOT auto-renormalize existing files
* text=auto eol=lf

*.py text eol=lf
*.yaml text eol=lf
*.sh text eol=lf
*.sh text eol=lf
*.bat text eol=crlf

# Additional Windows-native scripts with CRLF endings
*.cmd eol=crlf
*.ps1 eol=crlf

# Additional binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.pdf binary
*.ico binary

# Prevent merge conflicts on local env/config/trash
*.env merge=ours
*.yaml merge=union
*_backup/** merge=ours
.venv*/** merge=ours
mega_memory.yaml merge=ours
merge_conflicts_backup/** merge=ours
.temp_conflicts/** merge=ours
# Cross-device compatibility settings
config/device_config.json merge=ours
config/device_*.json merge=ours
*_device_specific.* merge=ours
.device_cache/** merge=ours
*samq*.tmp merge=ours
*samqu*.tmp merge=ours
*.psd filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text
*.bin filter=lfs diff=lfs merge=lfs -text
